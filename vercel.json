{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["dist/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.js"
      }
    ],
    "functions": {
      "api/todo": {
        "src": "index.js",
        "handler": "/api/todo", 
        "environment": {
          "API_ROUTE": "/api/todo" 
        }
      }
    }
 
  }
 